#!/bin/bash

if [ "$1" == "" ]; then
	echo "XL role is required!"
	exit 999
else
	nm=$1
fi


host=$(./mgmt-xl-get-host-by-role "$1")
conf=$(./mgmt-xl-get-confname "$1"|awk 'NR>1 {print $1","$2","$3}'|sort|uniq)
dir=$(echo "$conf"|awk '{split($0, a, ","); print a[1]}'|sort|uniq)

util-px "$host" cluster-xl-init.ps1 $host $1 $dir

for i in $conf; do
	confpath=$(echo "$conf"|awk '{split($0, a, ","); print a[2]}'|sort|uniq)
	
	#config=
	
	#util-px "$1" cluster-xl-conf.ps1 $host $1 $dir $confpath $config
done
