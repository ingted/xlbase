#!/usr/bin/expect -f

set host [lindex $argv 0]
set password [lindex $argv 1]
set sleepo [lindex $argv 2]

set sleep "$sleepo"

if [ string match $sleepo "" ] {
        set sleep 2
}


set timeout 120
spawn ssh-copy-id $host
exec sleep $sleep
expect {
	"password:" {
		send "$password\n"
	}
	"already exist" {
	}
}
expect eof
