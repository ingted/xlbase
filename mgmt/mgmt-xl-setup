#!/bin/bash

hostfile=
dirfile=

if [ "$3" == "1" ]; then
	update=1
else
	update=0
fi 

echo $(date +"%T") \[\| init-set-host \|\]
./mgmt-init-set-host "$1" $hostfile $update

echo $(date +"%T") \[\| init-set-xl \|\]
./mgmt-init-set-xl "$1" 9.2

echo $(date +"%T") \[\| xl-init-directories \|\]
./mgmt-xl-init-directories "$1" $dirfile $update



case $2 in
	gtm)
		./mgmt-xl-init-gtm   
		;;
	gtmsby)
		./mgmt-xl-init-gtmsby
		;;            
	gtmprx)
		./mgmt-xl-init-gtmprx $3       
		;;
	coor)
		./mgmt-xl-init-coor $3
		;;
	dn)
		./mgmt-xl-init-dn $3
		;;
	*)              
esac 
